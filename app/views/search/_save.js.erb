$("ul.errors").html("")
<% if @search.errors.any? %>
  <% @search.errors.full_messages.each do |message| %>
    $("ul.errors").append($("<li />").html("<%= message.html_safe %>"))
  <% end %>
<% else %>
  $(".category-index").html("<%= escape_javascript(render 'index') %>")
  $("#category-modal").modal("hide")
<% end %>