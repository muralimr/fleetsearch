

<div class="modal-dialog">
  <div class="modal-content">


   
   
  <%= form_for @search,:url=> {controller: "search", action: "create"},:authenticity_token =>true, remote: true, html: { style: "display:inline;" } do |f| %> 
     
      <div class="modal-body">
      
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :Emp_Name, class:"control-label" %>
          <%= f.text_field :empname, class: "form-control",:maxlength => '30',:id =>"catnam1",:onblur=>"return compcat(this.id);" %>
        </div>
        
        <div class="form-group">
          <%= f.label :Emp_department, class: "control-label" %>
          
          <%= f.text_field :empdept,class: "form-control" %>
        </div>

       
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>

