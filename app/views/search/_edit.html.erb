




<div class="modal-header">
  <h3><%= "Editing #{@search.empname}" %></h3>
</div>
<!-- <#%= render "form" %> -->

<div class="modal-dialog">
  <div class="modal-content">
    
    <%= form_for @search,:url=> {controller: "search", action: "update"},:authenticity_token =>true, remote: true, html: { style: "display:inline;" } do |f| %>

    

      <div class="modal-body">
      
        <ul class="errors"></ul>

        <div class="form-group">
          <%= f.label :empname, class:"control-label" %>
          <%= f.text_field :empname, class: "form-control",:maxlength => '30',:id =>"catnam1",:onblur=>"return compcat(this.id);" %>
        </div>
        <div class="form-group">
          <%= f.label :empdept, class: "control-label" %>
          
          <%= f.text_field :empdept,class: "form-control" %>
        </div>

        
       
      </div>
      <div class="modal-footer">
        <%= f.submit class: "btn btn-primary" %>
        <%= link_to "Cancel", "#", class: "btn", data: {dismiss: "modal"} %>
      </div>
    <% end %>
  </div>
</div>
